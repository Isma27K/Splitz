generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./Splitz.db"
}

model User {
  id       String    @id @default(cuid())
  name     String
  email    String    @unique
  settings Settings?
}

model Settings {
  id       String  @id @default(cuid())
  currency String  @default("MYR")
  theme    String  @default("light")

  user   User   @relation(fields: [userId], references: [id])
  userId String @unique
}
